<mui:ModernWindow x:Class="MuiTest.LoginWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
  Title="LoginWindow" Height="350" Width="250">

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="Log In As:" >
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Administrator" Source="/AdministratorLogin.xaml"  />
                <mui:Link DisplayName="Employee" Source="EmployeeLogin.xaml" />
                <mui:Link DisplayName="Guest" Source="GuestLogin.xaml"/>
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
    
</mui:ModernWindow>
